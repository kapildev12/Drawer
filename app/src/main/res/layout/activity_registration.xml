<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_services"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="qazi.tooba.com.drawer.Registration"
    android:background="#ffffff">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:textSize="28sp"
            android:textColor="@android:color/holo_red_dark"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Ambulance Surveillance"
            android:id="@+id/imageView" />
        <TextView
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="Registration"
            android:textSize="40dp"
            android:textColorHint="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:id="@+id/editText11" />
        <EditText
            android:paddingLeft="5dp"
            android:id="@+id/name"
            android:textColor="#000000"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="Full Name"
            android:textColorHint="#A9A9A9" />

        <EditText
            android:paddingLeft="5dp"
            android:id="@+id/email"
            android:textColor="#000000"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="Email"
            android:textColorHint="#A9A9A9" />

        <EditText
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:id="@+id/pass"
            android:inputType="textPassword"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="Password"
            android:textColorHint="#A9A9A9"
            />

        <EditText
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:hint="Contact Number"
            android:textColorHint="#A9A9A9"
            android:id="@+id/phoneNo"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">


            <TextView

                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
               android:paddingTop="15dp"
                android:hint="Medical Info"
                android:textSize="20dp"
                android:textColorHint="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:id="@+id/editText1" />

            <TextView
                android:paddingLeft="5dp"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:hint="Gender:"
                android:textStyle="bold"
                android:id="@+id/editText3" />

            <RadioGroup
                android:paddingLeft="42dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/gend"
                >
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Male"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:text="Female"/>

            </RadioGroup>

            <EditText
                android:paddingLeft="5dp"
                android:id="@+id/DOB"
                android:textColor="#000000"
                android:background="@drawable/edittextstyle"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:hint="Date_of_Birth  DD/MM./YY"
                android:textColorHint="#A9A9A9" />

            <EditText
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:background="@drawable/edittextstyle"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:id="@+id/BloodGroup"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:hint="Blood Group"
                android:textColorHint="#A9A9A9" />

            <EditText
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:background="@drawable/edittextstyle"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:id="@+id/Allergies"
                android:hint="Allergies"
                android:textColorHint="#A9A9A9"
                />

            <EditText
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:background="@drawable/edittextstyle"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:hint="Any Medication"
                android:textColorHint="#A9A9A9"
                android:id="@+id/medication" />
            <TextView
                android:paddingTop="15dp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:hint="Guardian Info"
                android:textSize="20dp"
                android:textColorHint="@android:color/holo_red_dark"
                android:textStyle="bold"
                android:id="@+id/editText" />


            <EditText
                android:paddingLeft="5dp"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:hint="Guardian Full Name"
                android:textColorHint="#A9A9A9"
                android:id="@+id/GuarName"
                android:background="@drawable/edittextstyle"

                />

            <EditText
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:background="@drawable/edittextstyle"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:hint="Contact Number"
                android:textColorHint="#A9A9A9"
                android:id="@+id/GaudPhone"
                />
            <EditText
                android:paddingLeft="5dp"
                android:textColor="#000000"
                android:background="@drawable/edittextstyle"
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:hint="Relation"
                android:textColorHint="#A9A9A9"
                android:id="@+id/Relations"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <Button


                    android:text="Submit"
                    android:id="@+id/signUp"
                    android:onClick="fun"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/buttonstyle"
                    android:layout_width="match_parent"

                    android:layout_height="0dp"
                    android:textColor="#ffffff"
                    android:textStyle="bold"

                    android:layout_weight="1"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</ScrollView>
